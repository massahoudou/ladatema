{% extends "admin/admin_base.html.twig" %}

{% block body %}
    
    <div class="container-fluid"> 
        {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message  }}
                </div>
            {% endfor %} 
        <div class="d-flex">

            <div class="col-lg-6 mb-4">

              <!-- Project Card Example -->
              <div class="card shadow mb-4">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary">Nouveaux secteur d'activit√©</h6>
                </div>
                    <div class="card-body">  
                        {{ form_start(form) }}

                        <div class=""> {{ form_row(form.nom) }} </div>
                        <div class="">{{ form_row(form.description) }}</div>
                        <button  type="submit"class="btn btn-warning rounded-0">
                            Enregistrer
                            <span class="fa fa-save"></span>
                        </button>
                        {{ form_end(form) }}
                    </div>
              </div>
            </div>

              <div class="col-lg-6 mb-4">

              <!-- Illustrations -->
              <div class="card shadow mb-4">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary">liste des secteurs </h6>
                </div>
                <div class="card-body">
                    <table class="table table-warning table-bordered ">
                        <thead class="bg-warning text-light">
                            <tr>
                                <td> #</td>
                                <td>Nom </td>
                                <td>Description</td>
                                <td>Action</td>
                            </tr>
                        </thead>
                        <tbody>
                        
                        {% for secteur in secteurs %}
                        <tr>
                            <td> {{ secteur.id }} </td>
                            <td>{{secteur.nom}} </td>
                            <td>
                               <a class="btn-sm text-primary" href=""> <i class="fa fa-pencil-alt"></i></a> |
                                <a class="btn-sm text-primary" href=""> <i class="fa fa-trash-alt"></i></a>
                               
                             </td>
                             </tr>
                        {% endfor %}
                        </tbody>
                    
                    </table>
                </div>
              </div>
            </div>

        </div>
        

    </div>



       
            

          
          
{% endblock %}