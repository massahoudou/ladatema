{% extends "admin/admin_base.html.twig" %}

{% block body %}

    <div class="container-fluid">
        {% for message in app.flashes('new') %}
            <div class="alert alert-info">
                {{ message  }}
            </div>
        {% endfor %}
        {% for message in app.flashes('update') %}
            <div class="alert alert-warning">
                {{ message  }}
            </div>
        {% endfor %}
        {% for message in app.flashes('delete') %}
            <div class="alert alert-danger">
                {{ message  }}
            </div>
        {% endfor %}
        <div class="d-flex">

            <div class="col-lg-6 mb-4">

                <!-- Project Card Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Nouvel Avis</h6>
                    </div>
                    <div class="card-body">
                       {% include'admin/avis/_form.html.twig' %}
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-4">

                <!-- Illustrations -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">liste des avis </h6>
                    </div>
                    <div class="card-body">
                        <table class="table table-warning table-bordered ">
                            <thead class="bg-danger text-light">
                            <tr>
                                <td> #</td>
                                <td>Nom </td>
                                <td>Description</td>
                                <td>Action</td>
                            </tr>
                            </thead>
                            <tbody>

                            {% for avis in avis %}
                                <tr>
                                    <td> {{ avis.id }} </td>
                                    <td>{{avis.nom}} </td>
                                    <td>{{ avis.commentaire }} </td>
                                    <td>
                                        <a class="btn-sm text-primary" href="{{ path("admin_avis_update",{'id': avis.id })}}"> <i class="fa fa-pencil-alt"></i></a> |
                                        <a class="btn-sm text-primary" href="{{ path("admin_avis_delete",{'id': avis.id })}}"> <i class="fa fa-trash-alt"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>

        </div>


    </div>








{% endblock %}