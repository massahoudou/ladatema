{% extends "admin/admin_base.html.twig" %}

{% block body %}
    
    <div class="container-fluid"> 
        {% for message in app.flashes('new') %}
                <div class="alert alert-info">
                    {{ message  }}
                </div>
        {% endfor %}

        {% for message in app.flashes('updae') %}
            <div class="alert alert-warning">
                {{ message  }}
            </div>
        {% endfor %}
        {% for message in app.flashes('delete') %}
            <div class="alert alert-danger">
                {{ message  }}
            </div>
        {% endfor %}


        <div class="d-flex">

            <div class="col-lg-6 mb-4">

              <!-- Project Card Example -->
              <div class="card shadow mb-4">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary">Nouveaux service</h6>
                </div>
                    <div class="card-body">  
                        {{ form_start(form) }}

                        <div class=""> {{ form_row(form.titre) }} </div> 
                        <div class=""> {{ form_row(form.description) }} </div>
                        <button  type="submit"class="btn btn-warning rounded-0">
                            Enregistrer
                            <span class="fa fa-save"></span>
                        </button>
                        {{ form_end(form) }}
                    </div>
              </div>
            </div>

              <div class="col-lg-6 mb-4">

              <!-- Illustrations -->
              <div class="card shadow mb-4">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary">liste des services</h6>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover table-bordered ">
                        <thead class="bg-dark text-light">
                            <tr>
                                <td> #</td>
                                <td>Nom </td>
                                 <td>edit</td>
                                <td>Suppr</td>
                            </tr>
                        </thead>
                        <tbody>
                        
                        {% for service in services %}
                        <tr>
                            <td> {{ service.id }} </td>
                            <td>{{ service.titre }} </td>
                             <td>
                               <a class="text-primary btn-sm " href="{{ path("service_update",{'id': service.id })}}"> <i class="fa fa-pencil-alt"></i></a>
                             </td>
                            <td>
                                <a class="text-primary  btn-sm " href="{{ path("service_delete",{'id': service.id })}}"> <i class="fa fa-trash-alt"></i></a>
                            </td>
                             </tr>
                        {% endfor %}
                        </tbody>
                    
                    </table>
                </div>
              </div>
            </div>

        </div>
    </div>

{% endblock %}