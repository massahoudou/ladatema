<div class="card shadow-sm">
    <table class="table table-striped table-responsive-sm table-bordered ">
        <thead class="bg-primary font-weight-bold text-light">
        <tr>
            <td class="bg-dark text-lgith">#</td>
            <td>Titre de l'offre</td>
            <td>descritiption</td>
            <td>Delai</td>
            <td>Editer</td>
            <td>supprimer</td>
        </tr>
        </thead>
        <tbody>
        {% for offre in offres %}
            <tr class="text-muted">
                <td class="bg-dark text-light">{{ offre.id }}</td>
                <td>{{ offre.titre }}</td>
                <td>{{ offre.description| slice(0,20) | raw }}...
                    <a data-toggle="modal" data-target="#myModal"  href="">Voir plus</a></td>
                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="staticBackdropLabel">{{ offre.titre }}</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            </div>
                            <div class="modal-body">
                                    {{ offre.description | raw }}
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">fermer</button>
                            </div>
                        </div>
                    </div>
                </div>
                <td>{{ offre.delai | date() }}</td>
                <td class="text-center">
                    <a  href="{{ path('edtion',{id: offre.id}) }}" class="text-primary"><i class="fa fa-edit"></i></a>
                </td>
                <td class="text-center">
                    <a href="{{ path('recruteur_delete',{id: offre.id}) }}" class="text-primary" ><i class="fa fa-trash"></i></a>
                    </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>
</div>