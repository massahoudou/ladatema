
<a{% for attr, value  in options | merge({class: 'btn  btn-secondary rounded-0'}) %} {{ attr }}="{{ value }}"{% endfor %}>
<span class="ml-2 float-right">
        {% if sorted %}
            {% if direction == 'desc' %}
                <i class="fa fa-sort-down"></i>
            {% else %}
                <i class="fa fa-sort-up"></i>
            {% endif %}
        {% else %}
            <i class="fa fa-sort"></i>
        {% endif %}
    </span>
{{ title }}
</a>
