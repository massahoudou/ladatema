    </div>
    <div class="col-lg-5 col-md-5 col-xl-7">
        <h3 class="text-light text-center">Inscription </h3>
        <!-- Project Card Example -->
        <div class="card shadow mb-4">
            <div class="card-body">
                {% for flashError in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                {% endfor %}
                {{ form_start(form) }}
                {{ form_row(form.nom) }}
                {{ form_row(form.prenom) }}

              <div class="row">
               <div class="col-md">{{ form_row(form.imageFile) }}</div>
                  <div class="col-md">{{ form_row(form.contact) }}</div>
              </div>
                {{ form_row(form.email) }}
                {{ form_row(form.plainPassword) }}

                <button class="btn btn-primary rounded-0  mt-4" type="submit">
                    <span> Enregistrer </span> <i class="fa fa-save"></i>
                </button>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

    </div>
</div>

