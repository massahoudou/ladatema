{% extends 'registration2/inscriptionbase.html.twig' %}



{% block body %}
<div class="container">
    {% if app.user  %}
    <div class="row justify-content-center">
        <div>
            <h1 class="text-light">Vous etes deja Connecter </h1>
            <a class="btn rounded-0 btn-primary" href="{{ path('logout') }}">
                <span>Deconnection</span>
                <i class="fa fa-user"></i>
            </a>
        </div>
    </div>
    {% else %}
<div class="row justify-content-lg-between">
    <div class=" col-md-4 text-light">
        <h3 class="">Hello world </h3>
        <p class="h5 font-weight-lighter" p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
            tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
